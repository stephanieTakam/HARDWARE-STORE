<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-sale" class="border-shadow">
                    <span class="text-gradient">New Sale <i class="fas fa-user"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/sale" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                                    <th>Code</th>
                                    <th>Date</th>
                                    <th>Name Client</th>
                                    <th>Name Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                    <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                    </tbody>
                </table>
            </form><br>
            <div class="box-nav d-flex justify-between">
                <a href="/" class="border-shadow">
                    <span class="text-gradient">Home <i class="fas fa-user"></i></span>
                </a>
            </div>
        </div>
    </main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->