        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_product">
    <div class="form-group">
        <label for="name" class="text-light">Code</label>
        <input type="hidden" name="id" value="<%= user._id %>" >
        <input type="text" name="code" value="<%= user.code %>" placeholder="Product Code">
    </div>
    <div class="form-group">
        <label for="name" class="text-light">Date</label>
        <input type="hidden" name="id" value="<%= user._id %>" >
        <input type="date" name="date" value="<%= user.date %>" >
    </div>
    <div class="form-group">
        <label for="name" class="text-light">Name Client</label>
        <input type="hidden" name="id" value="<%= user._id %>">
        <input type="text" name="nameclient" value="<%= user.nameclient %>" placeholder="Client name">
    </div>
    <div class="form-group">
        <label for="name" class="text-light">Name Product</label>
        <input type="hidden" name="id" value="<%= user._id %>" >
        <input type="text" name="nameproduct" value="<%= user.nameproduct %>" placeholder="Product name">
    </div>
    <div class="form-group">
        <label for="Email" class="text-light">Price</label>
        <input type="hidden" name="id" value="<%= user._id %>" >
        <input type="text" name="price" value="<%= user.price %>" placeholder="Price">
    </div>
    <div class="form-group">
        <label for="name" class="text-light" >Quantity</label>
        
        <input type="hidden" name="id" value="<%= user._id %>" >
        <input type="text" name="quantity" value="<%= user.quantity %>" >
    </div>

    <div class="form-group">
        <label for="name" class="text-light">Total</label>
        <input type="hidden" name="id" value="<%= user._id %>" >
        <input type="text" name="total" value="<%= user.total %>" >
    </div>

    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>
</form>
       
    </div>
</main>
