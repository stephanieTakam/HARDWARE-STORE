  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/sale"><i class="fas fa-angle-double-left"></i> All Sales</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Sale</h2>
            
